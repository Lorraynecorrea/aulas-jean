programa {
inclua biblioteca Matematica --> mat
 funcao inicio () {
  real juros, valor, pagamento, total
  inteiro meses

  escreva ("Digite o valor em reais:")
  leia (valor)
  
  escreva ("Digite a taxa de juros mensais %:")
  leia (juros)
   
  escreva ("Quantas parcelas ?")
  leia (meses)
  
  juros = juros / 100


  total = valor * mat. potencia(1 + juros, meses)
  escreva (total)
 } 
} 

